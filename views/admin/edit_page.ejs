<%- include('../layout/adminheader') %>

<h2 class="page-title">Edit Page</h2>
<a href="/admin" class="btn btn-primary">Back to all pages</a>
<br><br>

<form method="post" action="/admin/edit-page" >
    <div class="form-group">
        <label for="">title</label>
        <input type="text" name="title" class="form-control" value="<%= title %>" placeholder="title">
    </div>
    <div class="form-group">
        <label for="">Link</label>
        <input type="text" name="link" class="form-control" value="<%= link %>" placeholder="Link">
    </div>
    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" id="editor" class="form-control" cols="30" rows="10" placeholder="content"><%= content %></textarea>
    </div>

    <button class="btn btn-default">Kirim</button>
    <input type="hidden" value="<%= id %>">
</form>


<%- include('../layout/adminfooter') %>